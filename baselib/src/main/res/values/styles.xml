<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/std_color_C</item>
    </style>
    <style name="BaseTheme.Transparent" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ImageChooseItemStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/std_color_B</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/image_choose_sel</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
</resources>