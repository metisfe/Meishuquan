<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/screen_background_dark_transparent"
        >
        <ImageView
            android:id="@+id/video_mask_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            />
        <TextView
            android:id="@+id/video_mask_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_mask_back"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/screen_background_dark_transparent"
        >
        <ImageView
            android:id="@+id/video_mask_play_or_pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_play_pause_sel"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/video_mask_current_position"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_mask_play_or_pause"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        <SeekBar
            android:id="@+id/video_mask_seek_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_mask_current_position"
            android:layout_toLeftOf="@+id/video_mask_duration"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="50"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/video_mask_duration"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/video_mask_video_fullscreen_switch"
            />
        <ImageView
            android:id="@+id/video_mask_video_fullscreen_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_fullscreen_sel"
            android:padding="@dimen/padding_middle"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</RelativeLayout>