<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/discuss_item_profile"
        android:layout_width="@dimen/profile_size_middle"
        android:layout_height="@dimen/profile_size_middle" />
    <RelativeLayout
        android:id="@+id/discuss_item_support_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:id="@+id/discuss_item_support_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/discuss_item_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/discuss_item_support_count"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/discuss_item_info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/discuss_item_support_container"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/discuss_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/discuss_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/discuss_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/discuss_item_profile"
        android:layout_below="@+id/discuss_item_info_container"
        />
</RelativeLayout>