<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.base.activity.debug.DebugActivity">
    <FrameLayout
        android:id="@+id/debug_player_container"
        android:layout_width="fill_parent"
        android:layout_height="200dp"></FrameLayout>
    <Button
        android:id="@+id/debug_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play or pause"
        />
    <Button
        android:id="@+id/debug_full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full_screen"
        android:layout_toRightOf="@+id/debug_start"
        />
</RelativeLayout>
