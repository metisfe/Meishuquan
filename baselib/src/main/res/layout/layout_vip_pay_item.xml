<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/vip_pay_item_duration"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/vip_pay_item_flag"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/vip_pay_item_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/vip_pay_item_flag"
        />
    <TextView
        android:id="@+id/vip_pay_item_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/vip_pay_item_duration"
        android:layout_toLeftOf="@+id/vip_pay_item_open"
        />
</RelativeLayout>