<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.base.activity.RoleChooseActivity">
    <TextView
        android:id="@+id/role_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingTop="@dimen/padding_large"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_h2"
        android:gravity="center"
        android:text="@string/text_user_role_tip"
        />
    <AbsoluteLayout
        android:id="@+id/role_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/role_tip"
        />
</RelativeLayout>
