<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.base.activity.CacheActivity">
    <RelativeLayout
        android:id="@+id/cache_downloading_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/std_list_item_bg"
        android:layout_marginTop="@dimen/margin_big"
        >
        <ImageView
            android:id="@+id/cache_downloading_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_big"
            android:background="@android:color/holo_orange_light"
            />
        <ImageView
            android:id="@+id/cache_downloading_flag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_editable_flag"
            android:layout_margin="@dimen/margin_big"
            />
        <TextView
            android:id="@+id/cache_downloading_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignTop="@+id/cache_downloading_icon"
            android:layout_toRightOf="@+id/cache_downloading_icon"
            android:layout_toLeftOf="@+id/cache_downloading_flag"
            android:textColor="@android:color/black"
            android:textSize="@dimen/std_size_h5"
            android:text="正在缓存"
            />
        <ProgressBar
            android:id="@+id/cache_downloading_progress"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/cache_downloading_icon"
            android:progress="43"
            android:layout_toLeftOf="@+id/cache_downloading_flag"
            android:layout_toRightOf="@+id/cache_downloading_icon"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:background="@android:color/holo_blue_dark"
            android:padding="0dp"
            />
        <TextView
            android:id="@+id/cache_downloading_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cache_downloading_progress"
            android:layout_alignRight="@+id/cache_downloading_progress"
            android:singleLine="true"
            android:text="1.5M/92m"
            />
        <TextView
            android:id="@+id/cache_downloading_current_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignLeft="@+id/cache_downloading_progress"
            android:layout_toLeftOf="@+id/cache_downloading_progress_text"
            android:layout_above="@+id/cache_downloading_progress"
            android:text="狼牙棒"
            />
    </RelativeLayout>
</RelativeLayout>
