<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/teacher_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin_big"
        />
    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teacher_profile"
        android:textSize="@dimen/size_h5"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/teacher_extra_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teacher_profile"
        android:layout_alignBottom="@+id/teacher_profile"
        android:textSize="@dimen/size_h6"
        android:textColor="@color/color_c6"
        />
</RelativeLayout>