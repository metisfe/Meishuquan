<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comment_card_header_bg"
    >
    <ImageView
        android:id="@+id/header_profile"
        android:layout_width="@dimen/profile_size_middle"
        android:layout_height="@dimen/profile_size_middle"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_middle"
        />
    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/header_profile"
        android:layout_alignTop="@+id/header_profile"
        android:layout_toLeftOf="@+id/header_support"
        android:textSize="@dimen/size_h5"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/header_profile"
        android:layout_alignBottom="@+id/header_profile"
        android:layout_toLeftOf="@+id/header_support"
        android:textSize="@dimen/size_h6"
        android:textColor="@color/color_c6"
        />
    <ImageView
        android:id="@+id/header_support"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_big"
        android:src="@drawable/comment_thumb_up"
        />
</RelativeLayout>