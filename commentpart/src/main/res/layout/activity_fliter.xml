<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.commentpart.activity.FilterActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_state"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:paddingLeft="@dimen/padding_big"
            android:paddingTop="@dimen/padding_middle"
            android:paddingRight="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_middle"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_category"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:paddingLeft="@dimen/padding_big"
            android:paddingTop="@dimen/padding_middle"
            android:paddingRight="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_middle"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_area"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:paddingLeft="@dimen/padding_big"
            android:paddingTop="@dimen/padding_middle"
            android:paddingRight="@dimen/padding_big"
            android:paddingBottom="@dimen/padding_middle"
            />
    </LinearLayout>
</FrameLayout>
