<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/std_list_item_bg"
    android:padding="@dimen/padding_middle"
    >
    <TextView
        android:id="@+id/news_item_related_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_h2"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="@dimen/margin_middle"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/news_item_related_content"
        >
        <TextView
            android:id="@+id/news_item_related_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/size_h6"
            android:textColor="@color/color_c2"
            android:layout_toLeftOf="@+id/news_item_related_read"
            />
        <View
            android:id="@+id/news_item_related_divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/color_c2"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginRight="@dimen/margin_middle"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/news_item_related_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/size_h6"
            android:textColor="@color/color_c2"
            android:layout_toLeftOf="@+id/news_item_related_comment"
            android:layout_marginRight="@dimen/margin_middle"
            />
        <TextView
            android:id="@+id/news_item_related_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/size_h6"
            android:textColor="@color/color_c2"
            android:layout_marginRight="@dimen/margin_middle"
            />
    </LinearLayout>
</RelativeLayout>