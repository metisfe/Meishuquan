<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/std_padding"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/item_big_thumb"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/item_big_thumb"
        android:layout_toLeftOf="@+id/item_btn_more"
        />
    <ImageView
        android:id="@+id/item_author_profile"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/item_title"
        />
    <TextView
        android:id="@+id/item_author_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/item_author_profile"
        android:layout_below="@+id/item_title"
        android:layout_toLeftOf="@+id/item_btn_more"
        />
    <ImageView
        android:id="@+id/item_btn_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/item_big_thumb"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>