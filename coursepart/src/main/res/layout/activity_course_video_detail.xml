<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metis.coursepart.activity.CourseVideoDetailActivity">
    <fragment
        android:id="@+id/video_detail_player_fragment"
        android:name="com.metis.playerlib.PlayerFragment"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        />
    <LinearLayout
        android:id="@+id/video_detail_btn_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/video_detail_player_fragment"
        android:background="@android:color/white"
        >
        <Button
            android:id="@+id/video_detail_detail_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab_detail"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/video_tab_text_color"
            android:textSize="18sp"
            />
        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@android:color/black"
            android:layout_marginTop="@dimen/std_margin_vertical"
            android:layout_marginBottom="@dimen/std_margin_vertical"
            />
        <Button
            android:id="@+id/video_detail_chapter_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab_chapter"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/video_tab_text_color"
            android:textSize="18sp"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/video_detail_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/video_detail_btn_container"
        />
</RelativeLayout>
