<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_item_title_height"
    android:paddingLeft="@dimen/std_padding_horizontal"
    android:paddingRight="@dimen/std_padding_horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <TextView
        android:id="@+id/title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/title_sub_text"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/title_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/title_more"
        />
</RelativeLayout>